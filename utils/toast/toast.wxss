/* utils/toast/toast.wxss */
.fullbg{
  position: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgb(0, 0, 0,0);
  z-index: 1024;
}
.toast.container{
  position: absolute;
  top:50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
          transform: translate(-50%,-50%);
  background-color: rgb(0, 0, 0,.5);
  border-radius: 10px;
  min-height: 80px;
  width: 150px;

}
