@import './pages/widget/menuItem.wxss';

/*公共样式  */
page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
.wrapper {
  background-color: #f4f5f7;
  height: 100%;
  width: 100%;
}
ui,li{
  margin: 0;
  padding: 0;
  display: block;
}
.b-l{
  display: block;
}
.i-b{
  display: inline-block;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
image{
   height: 100%;
   width: 100%;
}
.dis-box{
  display: -webkit-box;
  display: box;
  -webkit-box-align: center;
          box-align: center;
  -webkit-box-pack: justify;
          box-pack: justify;
  
}
.flex-1{
  -webkit-box-flex:1; 
          box-flex:1; 
}
.none{
  display: none;
}
.main-color{
  color: #F40;
}
.fl{
  float: left;
}
.load-tip{
  color: #969696;
  font-size: 12px;
  padding: 10px;
  text-align: center;
}
.select-radio{
  display: inline-block;
  background-size: 18px 18px;
  background-position: center;
  background-repeat: no-repeat;
  height: 18px;
  width: 18px;
  vertical-align: middle;
}
.select-radio.unactive{
  background-image: url(../../images/icon/select.png);
}
.select-radio.active{
  background-image: url(../../images/icon/selected.png);
}

/*toast  */
.fullbg{
  position: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgb(0, 0, 0,0);
  z-index: 1024;
}
.toast.container{
  position: absolute;
  top:50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
          transform: translate(-50%,-50%);
  background-color: rgb(0, 0, 0,.5);
  border-radius: 10px;
  min-height: 80px;
  width: 150px;

}